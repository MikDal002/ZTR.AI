@inject IStringLocalizer<Resource> localizer;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ZTR.AI.Example</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div id="menuCollapser" class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="SimulatedAnnealing">
                <span class="oi oi-plus" arria-hidden="true"></span> @localizer["SimulatedAnnealing"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Greedy">
                <span class="oi oi-plus" arria-hidden="true"></span> @localizer["Greedy"]
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    public string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    public void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
